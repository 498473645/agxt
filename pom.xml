                    <compilerId>eclipse</compilerId>
                    <optimize>true</optimize>
                    <encoding>utf-8</encoding>
                    <failOnError>false</failOnError>
                    <useIncrementalCompilation>true</useIncrementalCompilation>
                    <compilerArgs>
