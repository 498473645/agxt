            <!-- 生成git版本信息文件，参考https://github.com/ktoso/maven-git-commit-id-plugin#using-the-plugin -->
            <plugin>
                <groupId>pl.project13.maven</groupId>
                <artifactId>git-commit-id-plugin</artifactId>
                <configuration>
                    <generateGitPropertiesFile>true</generateGitPropertiesFile>
                    <failOnNoGitDirectory>false</failOnNoGitDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>get-the-git-infos</id>
                        <goals>
                            <goal>revision</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- spring-cloud-config配置 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <skip>true</skip>
                            <exportAntProperties>true</exportAntProperties>
                            <target>
                                <replaceregexp byline="true">
                                    <regexp pattern="spring.cloud.config.name:.*"/>
                                    <substitution expression="spring.cloud.config.name:${spring.cloud.config.name}"/>
                                    <fileset dir="src/main/resources" includes="bootstrap.yml"/>
                                </replaceregexp>
                                <replaceregexp byline="true">
                                    <regexp pattern="spring.cloud.config.profile:.*"/>
                                    <substitution
                                            expression="spring.cloud.config.profile:${spring.cloud.config.profile}"/>
                                    <fileset dir="src/main/resources" includes="bootstrap.yml"/>
                                </replaceregexp>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

