            <!-- 必须在其它插件后面声明maven-antrun-plugin插件，因为该插件会影响插件的执行顺序 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <!-- 代码混淆，参考：https://www.guardsquare.com/en/products/proguard -->
                    <execution>
                        <id>package</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <skip>true</skip>
                            <exportAntProperties>true</exportAntProperties>
                            <target>
                                <echo message="obfuscate java code"/>

                                <property name="maven.dependency.classpath" refid="maven.dependency.classpath"/>

                                <typedef resource="proguard/ant/task.properties"
                                         classpathref="maven.dependency.classpath"/>
                                <!--suppress UnresolvedMavenProperty -->
                                <proguard>
                                    -dontoptimize
                                    -ignorewarnings
                                    -keepdirectories
                                    -keepparameternames

                                    -libraryjars ${maven.dependency.classpath}
                                    -libraryjars ${java.home}/lib/rt.jar
                                    -libraryjars ${java.home}/lib/jce.jar
                                    -injars ${project.build.directory}/${project.artifactId}-${project.version}.jar
                                    -outjars ${project.build.directory}/${project.artifactId}-${project.version}-tmp.jar

                                    -keepattributes Exceptions,InnerClasses,Signature,*Annotation*

                                    -keep public class * {
                                    public protected *;
                                    }
                                </proguard>

                                <!-- 将混淆的jar包替换目标jar包 -->
                                <move file="${project.build.directory}/${project.artifactId}-${project.version}-tmp.jar"
                                      tofile="${project.build.directory}/${project.artifactId}-${project.version}.jar"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <!-- 代码混淆 -->
                    <dependency>
                        <groupId>net.sf.proguard</groupId>
                        <artifactId>proguard-anttask</artifactId>
                        <version>6.1.1</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
