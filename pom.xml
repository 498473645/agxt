            <artifactId>support-swagger2</artifactId>
            <version>2.1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.support</groupId>
            <artifactId>support-quartz</artifactId>
            <version>2.1.1-SNAPSHOT</version>
        </dependency>
        <!--        <dependency>-->
